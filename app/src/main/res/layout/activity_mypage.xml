<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mypage"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#99ccff"
            android:checked="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skyblue_background"
            android:padding="8dp"
            android:text="맞춤 공모전 추천"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="내 이름"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="김시현"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="학과"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="소비자학과"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="학번"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="201900927"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/skyblue_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:padding="8dp"
            android:text="관심 분야"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="기획"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="해외"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="마케팅"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16dp"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skyblue_ripple"
            android:padding="8dp"
            android:text="관심분야 수정하기"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/skyblue_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="팀원이 평가한 키워드 상자"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="# 성실함"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="# 성숙함"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skyblue_background"
                android:padding="8dp"
                android:text="# 멋있음"
                android:layout_weight="1"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/jua_ttf"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/skyblue_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="인원 모집 중인 공모전:"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"
            android:textSize="24dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fontFamily="@font/jua_ttf"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="한국전력공사"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/skyblue_ripple"
                android:padding="8dp"
                android:text="확인하기"
                android:fontFamily="@font/jua_ttf"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>